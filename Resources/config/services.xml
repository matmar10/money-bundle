<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lmh_money.currency_manager.currency_configuration_filename">%kernel.root_dir%/../vendor/lmh/money-bundle/Lmh/Bundle/MoneyBundle/Resources/config/currency-configuration.yml</parameter>
        <parameter key="lmh_money.currency_manager.class">Lmh\Bundle\MoneyBundle\Service\CurrencyManager</parameter>
        <parameter key="lmh_money.currency_code_validator.class">Lmh\Bundle\MoneyBundle\Service\CurrencyCodeValidator</parameter>
    </parameters>

    <services>
        <service id="lmh_money.currency_manager" class="%lmh_money.currency_manager.class%">
            <argument type="string" id="lmh_money.currency_manager.currency_configuration_filename">%lmh_money.currency_manager.currency_configuration_filename%</argument>
        </service>

        <service id="validator.unique.currency_code_validator" class="%lmh_money.currency_code_validator.class%">
            <argument type="service" id="lmh_money.currency_manager" />
            <tag name="validator.constraint_validator" alias="currency_code_validator" />
        </service>

    </services>
</container>
